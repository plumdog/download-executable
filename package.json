{
  "name": "download-executable",
  "version": "0.1.0",
  "description": "Download an executable, but only if needed",
  "scripts": {
    "build": "rm -rf build/ && npm run -- tsc --project ./tsconfig.dist.json --noEmitOnError --outDir ./build && cp package.json package-lock.json README.md ./build/ && (cd ./build && npm ci --only=production)",
    "compile": "npm run tsc --noEmitOnError",
    "version": "auto-changelog -p && git add CHANGELOG.md",
    "test": "jest",
    "eslint": "eslint",
    "_lint": "eslint '**/*.ts' '.*.js' package.json 'tsconfig*.json'",
    "lint": "npm run -- _lint --fix",
    "lint-check": "npm run -- _lint --max-warnings 0",
    "tsc": "tsc"
  },
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "27.4.0",
    "@types/string-format": "2.0.0",
    "@types/node": "14.14.44",
    "@types/tmp": "0.2.0",
    "@typescript-eslint/eslint-plugin": "4.23.0",
    "@typescript-eslint/parser": "4.23.0",
    "auto-changelog": "2.0.0",
    "axios-mock-adapter": "1.19.0",
    "eslint": "7.26.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-prettier": "3.4.0",
    "jest": "27.4.7",
    "jest-mock-axios": "4.5.0",
    "prettier": "2.3.0",
    "ts-jest": "27.1.3",
    "ts-node": "9.1.1",
    "typescript": "4.2.4"
  },
  "dependencies": {
    "axios": "^0.21.1",
    "string-format": "^2.0.0",
    "tmp": "^0.2.1"
  }
}
